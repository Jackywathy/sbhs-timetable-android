<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <PreferenceCategory
        android:title="@string/pref_header_notifications" />
    <CheckBoxPreference
        android:key="notifications_enable"
        android:title="@string/pref_title_allow_notifications"
        android:summaryOn="@string/pref_desc_allow_notifications_enabled"
        android:summaryOff="@string/pref_desc_allow_notifications_disabled"
        android:defaultValue="true" />


</PreferenceScreen>
