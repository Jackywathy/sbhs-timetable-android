<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".NavigationDrawerFragment"
	android:background="@color/background">

	<ListView android:id="@+id/navdraw_listview"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:choiceMode="singleChoice"
		android:divider="@android:color/transparent"
		android:dividerHeight="0dp" />

	<ListView android:id="@+id/navdraw_botlistview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/navdraw_listview"
		android:dividerHeight="1dp"
		android:choiceMode="singleChoice" />

	<TextView android:id="@+id/navdraw_todaycached_label"
		android:layout_width="50dp"
		android:gravity="left"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="0dp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
        android:text="Today: " />

	<TextView android:id="@+id/navdraw_todaycached"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="16dp"
		android:layout_toRightOf="@id/navdraw_todaycached_label"
		android:layout_alignParentBottom="true"
		android:text="\?" />

    <TextView android:id="@+id/navdraw_bellscached_label"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
		android:gravity="left"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="0dp"
		android:layout_alignParentLeft="true"
        android:layout_above="@+id/navdraw_noticescached_label"
        android:text="Bells: " />
	<TextView android:id="@+id/navdraw_bellscached"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="16dp"
		android:layout_toRightOf="@id/navdraw_bellscached_label"
		android:layout_above="@id/navdraw_noticescached_label"
		android:text="\?" />

    <TextView android:id="@+id/navdraw_noticescached_label"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
		android:gravity="left"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="0dp"
        android:layout_above="@id/navdraw_todaycached"
		android:layout_alignParentLeft="true"
        android:text="Notices: " />

	<TextView android:id="@+id/navdraw_noticescached"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		android:layout_marginLeft="0dp"
		android:layout_marginRight="16dp"
		android:layout_toRightOf="@id/navdraw_noticescached_label"
		android:layout_above="@id/navdraw_todaycached"
		android:text="\?" />

</RelativeLayout>