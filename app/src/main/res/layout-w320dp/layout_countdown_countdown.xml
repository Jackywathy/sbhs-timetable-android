<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/countdown_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40sp"
        android:fontFamily="sans-serif-thin"
        android:text="Something happens" />

    <TextView android:id="@+id/countdown_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/countdown_name"
        android:gravity="center"
        android:textSize="15sp"
        android:text="in" />

    <TextView android:id="@+id/countdown_countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:fontFamily="sans-serif-thin"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_below="@id/countdown_in" />

</RelativeLayout>